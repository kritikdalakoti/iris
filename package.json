{
  "name": "iris",
  "version": "1.0.0",
  "description": "meter monitoring project",
  "main": "index.js",
  "dependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/hapi": "^20.0.3",
    "@hapi/joi": "^17.0.3",
    "@hapi/lab": "^24.1.1",
    "@types/node": "^14.14.22",
    "aes-js": "^3.1.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "csvtojson": "^2.0.10",
    "del-cli": "^3.0.1",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-swagger": "10.1.2",
    "humps": "^2.0.1",
    "inert": "^5.1.3",
    "influx": "^5.7.0",
    "knex": "^0.21.16",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "nconf": "^0.11.1",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.4.17",
    "nodemon": "^2.0.7",
    "path": "^0.12.7",
    "pg": "8.5.1",
    "ramda": "^0.27.1",
    "request": "^2.88.0",
    "typescript": "^4.1.3",
    "vision": "^5.4.4",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "build": "yarn cleanup && yarn compile && yarn copy",
    "cleanup": "del-cli _build",
    "cleanup:all": "yarn cleanup && del-cli coverage && del-cli node_modules ",
    "compile": "tsc",
    "cover": "ts-node node_modules/.bin/istanbul cover -e .ts -x '*.test.ts' node_modules/.bin/tape './**/*.test.ts' | tap-spec",
    "dev": "yarn server:dev",
    "local": "yarn server:local",
    "live": "yarn server:live",
    "debug": "yarn server:debug",
    "qa": "yarn server:qa",
    "lint": "tslint 'src/**/*.ts' 'server*.ts'",
    "server:live": "NODE_PATH=. node --harmony server.js",
    "server:dev": "concurrently --kill-others \"node_modules/.bin/tsc -w --pretty\" \"node_modules/.bin/cross-env NODE_PATH=. NODE_ENV=dev QA=false DEBUG=Paws:* logLevel=debug node_modules/.bin/nodemon -L --harmony ./_build/index.js\" ",
    "server:local": "NODE_OPTIONS=--max-old-space-size=4096 concurrently --kill-others \"node_modules/.bin/tsc -w --pretty\" \"node_modules/.bin/cross-env NODE_PATH=. NODE_ENV=local QA=false DEBUG=Paws:* logLevel=debug node_modules/.bin/nodemon -L --harmony ./_build/index.js\" ",
    "server:debug": "concurrently --kill-others 'node_modules/.bin/tsc -w --pretty' 'node_modules/.bin/cross-env NODE_PATH=. NODE_ENV=development logLevel=debug node_modules/.bin/nodemon -L --harmony --debug ./_build/server.js'",
    "server:qa": "concurrently --kill-others 'node_modules/.bin/tsc -w --pretty' 'node_modules/.bin/cross-env NODE_PATH=. NODE_ENV=development logLevel=debug node_modules/.bin/nodemon -L --harmony --debug ./_build/server.js'",
    "copy": "cp src/configurations/*.json _build/configurations && cp -rf public _build/",
    "test": " yarn build && NODE_ENV=test && lab _build/tests/*.js -l --c"
  },
  "author": "",
  "license": "ISC"
}
